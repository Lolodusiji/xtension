{
    "manifest_version": 3,
    "name": "HelpMeOut",
    "description": "Records the user's screen",
    "version": "1.0.0",
    "icons": {
      "128": "/images/small.svg"
    },
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "/images/small.svg"
      }
    },
    "host_permissions": [
      "http://*/",
      "https://*/*"
    ],
    "permissions": [
      "scripting",
      "tabs",
      "activeTab"
    ]
  }
  